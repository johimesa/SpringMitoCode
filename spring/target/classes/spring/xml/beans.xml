<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="persona" class="com.johimesa.beans.Persona" name="personaBean">
		<property name="paiss" ref="pais"></property>
		<property name="id" value="1"></property>
		<property name="name" value="Hilario"></property>
		<property name="alias" value="johi"></property>
	</bean>

	<bean id="pais" class="com.johimesa.beans.Pais">
		<property name="name" value="PerÃº"></property>
