<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<!-- default-init-method="inicio" default-destroy-method="destruye"> esto para q afecte a todos los beans q tengan esos mÃ©todos en sus POJO -->
	
	<bean id="messi" class="com.johimesa.beans.Jugador">
		<property name="number" value="1"></property>
		<property name="name" value="Leonel Messi"></property>
		<property name="team" ref="barcelona"></property>
	</bean>
	
	<bean id="barcelona" class="com.johimesa.beans.Barcelona"></bean>
	<bean id="juventus" class="com.johimesa.beans.Juventus"></bean>
	
</beans>
